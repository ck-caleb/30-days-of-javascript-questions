// ?QUESTION 52.Develop a small script which generate array of 5 random numbers
const randomNumbers = [];
for (i = 0; i < 5; i++) {
  const randomNum = Math.floor(Math.random() * 100);
  randomNumbers.push(randomNum);
}
console.log(randomNumbers);
